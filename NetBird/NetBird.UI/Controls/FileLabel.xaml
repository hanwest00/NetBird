<UserControl x:Class="NetBird.Controls.FileLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="160" >
    <Grid Name="main" Height="30" Width="160">
        <Image Name="fileIcon" HorizontalAlignment="Left" Width="30"></Image>
        <Label Name="fileName" Margin="30,0,20,0" Width="110" Height="29" VerticalAlignment="Top"></Label>
        <Button Name="btnClose" Width="16" HorizontalAlignment="Right" BorderBrush="Gray" Background="AliceBlue" Height="16" VerticalAlignment="Center"></Button>
        <ProgressBar Name="Progress" Width="150" Margin="0,0" Height="10" Visibility="Collapsed" VerticalAlignment="Bottom" DataContext="{Binding}"></ProgressBar>
        <Label Name="acceptLabel" Width="22" Height="15" FontSize="10" Foreground="Coral" Visibility="Collapsed" Padding="1" HorizontalAlignment="Right" Content="接收" VerticalAlignment="Bottom"></Label>
    </Grid>
</UserControl>
